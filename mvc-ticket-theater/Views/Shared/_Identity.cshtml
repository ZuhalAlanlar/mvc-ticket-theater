@using Microsoft.AspNetCore.Identity;

@inject UserManager<AppUser> userManager;
@if (!User.Identity.IsAuthenticated)

{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login"> <i class="bi bi-box-arrow-in-right"></i>Giriş Yap</a>
    <span style="padding: 5px;"></span>
    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register"> <i class="bi bi-person-plus"></i>Üye Ol</a> }
else
{


    @*User Profile Section*@
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown"
                aria-expanded="false">
            <i class="bi bi-person-badge">@userManager.GetUserName(User)</i>
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>

            </li>
        </ul>
    </div>

    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi-box-arrow-in-right">Çıkış Yap</i>
        </button>
    </form>



}

