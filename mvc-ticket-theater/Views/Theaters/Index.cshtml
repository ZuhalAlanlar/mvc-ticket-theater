@model IEnumerable<Theater>


@{
    ViewData["Title"] = "Tiyatro Listesi";
}

<div class="row">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Name
                                        <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>

                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.TheaterImg" width="100%" alt="@item.Name">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><b>Salon: </b>@item.Saloon.Name</p>
                                <p class="card-text"><b>Kategori: </b>@item.Category</p>
                                <p class="card-text"><b>Başlama Tarihi: </b>@item.StartDate.ToString("dd MMM yy")</p>
                                <p class="card-text"><b>Bitiş Tarihi: </b>@item.EndDate.ToString("dd MMM yy")</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white">GÖSTERİMDE</span>
                                    }
                                    else if (DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white">SONLANDI</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">YAKINDA</span>
                                    }
                                </p>

                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right"> <i class="bi bi-eye-fill"></i> Show Details </a>
                                    <a class="btn btn-success text-white">
                         
                                        <i class="bi bi-cart-plus"></i> Sepete Ekle @item.Price.ToString("c"))
                                    </a>
                                </p>
                            </div>
                        </div>







                    </div>
                </div>
            </div>
        }
    </div>


</div>
